<h1><%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>
<p>Category: <%= @restaurant.review.content %> <%= @restaurant.review.rating %></p>

<%= link_to "All restarants", restaurants_path%>
<%= link_to "Edit restaurant", edit_restaurant_path%>
<%= link_to "Delete #{@restaurant.name}",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Add review", new_restaurant_review_path%>